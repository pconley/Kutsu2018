<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :signature %>
    <%= form.text_field :signature, id: :quote_signature %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, id: :quote_text, cols: 40, rows: 10 %>
  </div>

  <div class="field">
    <%= form.label "Status (not used)" %>
    <%= form.text_field :status, id: :quote_status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
